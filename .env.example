# Client-side environment variables (exposed to the browser)
# These must be prefixed with HELIUM_PUBLIC_ to be accessible in React
HELIUM_PUBLIC_APP_NAME="Helium Example App"
HELIUM_PUBLIC_API_URL="https://example.com/api"
HELIUM_PUBLIC_FEATURE_FLAG="true"

# Server-side only environment variables (not prefixed with HELIUM_PUBLIC_)
# These are only accessible in server code, not in the browser
MONGODB_URI="mongodb://localhost/database"

API_SECRET_KEY="super-secret-key-123"

BETTER_AUTH_SECRET="super-secret-key-123"
BETTER_AUTH_URL="http://localhost:3000" # Base URL of your app
# Next Auth Google Provider
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID_HERE"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET_HERE"

# Security
# Custom secret for signing WebSocket connection tokens.
# If not set, a random secret will be generated on each server start.
# Set this to persist tokens across server restarts or for multi-server deployments.
HELIUM_SECRET="your-secret-key-here"